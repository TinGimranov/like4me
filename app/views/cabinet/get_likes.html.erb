<script type="text/javascript">
	var modal_show = 0;
</script>
<form class="form-horizontal" style="margin-top: 135px; margin-left: 63px;" method="POST">
  <div class="control-group">
    <label style="float: left">Название</label>
    <div class="controls" style="margin-left: 180px">
      <input type="text" placeholder="Моё новое фото">
    </div>
  </div>
  <div class="control-group">
    <label style="float: left">Сслыка</label>
    <div class="controls" style="margin-left: 180px">
      <input type="text" placeholder="http://vk.com/feed?w=wall96657332_11823480">
    </div>
  </div>
  <div class="control-group">
    <label style="float: left">Сколько ♥ потратить</label>
    <div class="controls" style="margin-left: 180px">
      <input type="text" id="balance-current-status">
    </div>
  </div>
  <div class="control-group">
    <label style="float: left">Пол</label>
    <div class="controls" style="margin-left: 180px" >
      <select id="sex">
      		<option value='0'>Не важно</option>
      		<option value='1'>Только мужчины</option>
      		<option value='2'>Только женщины</option>
      </select>
    </div>
  </div>
    <div class="control-group">
    <label style="float: left">Возраст от</label>
    <div class="controls" style="margin-left: 180px">
      <select  id="gender_min">
      		<option value='0'>Не важно</option>
      		<option value='14'>14 лет</option>
      		<option value='16'>16 лет</option>
      		<option value='18'>18 лет</option>
      		<option value='20'>20 лет</option>
      		<option value='22'>22 лет</option>
      		<option value='24'>24 лет</option>
      		<option value='26'>26 лет</option>
      		<option value='28'>28 лет</option>
      		<option value='30'>30 лет</option>
      </select>
    </div>
  </div>
  <div class="control-group">
    <label style="float: left">Возраст до</label>
    <div class="controls" style="margin-left: 180px" >
      <select id="gender_max">
      		<option value='0'>Не важно</option>
      		<option value='16'>16 лет</option>
      		<option value='18'>18 лет</option>
      		<option value='20'>20 лет</option>
      		<option value='22'>22 лет</option>
      		<option value='24'>24 лет</option>
      		<option value='26'>26 лет</option>
      		<option value='28'>28 лет</option>
      		<option value='30'>30 лет</option>
      </select>
    </div>
  </div>
    <div class="control-group">
    <label style="float: left">Сколько лайков добавится на вашу страницу в ВК:<h2 class="user-balance-number" style="float: none; margin: 0 0 0 0" id="balance-result-ststus">0 ♥</h2></label>
    <div class="controls" style="margin-left: 180px">

    </div>
  </div>
  <div class="control-group">
    <div class="controls" style="margin-left: 180px">
      <button type="submit" class="btn btn-block" style="width: 60%">Заказать</button>
    </div>
  </div>
</form>

<div class="modal hide fade" id="myModal">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3>Информация</h3>
  </div>
  <div class="modal-body">
    <p id="modal_content"></p>
  </div>
  <div class="modal-footer">
    <a href="#" class="btn" data-dismiss="modal" aria-hidden="true">Close</a>
  </div>
</div>

<script type="text/javascript">
var sex = 0;
var gender = 0;
$("select").change(function(){
	if(modal_show == 0) {
		$("#modal_content").empty().html("За дополнительные опции взимается 1 лайк за каждое сердечко на вашу страницу");
		$("#myModal").modal("show");
		modal_show = 1;
	}
	if(!$("#balance-current-status").val())
    var balance = 0;
  else
    var balance = parseInt($("#balance-current-status").val());

	if($("#sex").val() != 0 && $("#sex").val())
    sex = 1;
  else
    sex = 0;

  if(($("#gender_max").val() != 0 && $("#gender_max").val()) || ($("#gender_min").val() != 0 && $("#gender_min").val()))
    gender = 1;
  else
    gender = 0;

  var new_balance = balance;
  if (sex == 1) { new_balance += balance };
  if (gender == 1) { new_balance += balance };
  
  $("#balance-result-ststus").empty().html(new_balance+' ♥');
});

$("#balance-current-status").keyup(function(){
   var balance = parseInt($("#balance-current-status").val());
   var new_balance = balance;
   if (sex == 1) { new_balance += balance};
   if (gender == 1) { new_balance += balance};
   $("#balance-result-ststus").empty().html(new_balance+' ♥');       
});
</script>
